{
	"name": "bobbyalcorn/restrictly-wp",
	"version": "0.1.0",
	"description": "Restrictly - A lightweight content restriction plugin for WordPress",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"autoload": {
		"psr-4": {
			"Restrictly\\": "src/"
		}
	},
	"require-dev": {
		"phpcompatibility/php-compatibility": "^9.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1",
		"wp-coding-standards/wpcs": "^3.1",
		"php-stubs/wordpress-stubs": "^6.9",
		"phpstan/phpstan": "^2.1"
	},
	"scripts": {
		"lint": "vendor/bin/phpcs --standard=phpcs.xml.dist",
		"lint-compat": "vendor/bin/phpcs --standard=PHPCompatibilityWP --runtime-set testVersion=7.4-8.3 .",
		"phpstan": "vendor/bin/phpstan analyse --level=max ."
	},
	"config": {
		"platform": {
			"php": "8.3"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
